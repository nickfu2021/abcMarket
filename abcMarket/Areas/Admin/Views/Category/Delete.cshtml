@model abcMarket.Models.Categorys

@{
    ViewBag.Title = "商品分類刪除";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Delete", "Category", new { area = "Admin" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(model => model.rowid)

    <div class="form-group">
        @Html.LabelFor(model => model.category_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.category_no != null)
        {<span class="control-label control-value">@Model.category_no</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.category_name, htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.category_name != null)
        {<span class="control-label control-value">@Model.category_name</span>}
    </div>

    <div>
        <input type="submit" value="刪除" class="btn btn-danger form-button" />
    </div>
}
