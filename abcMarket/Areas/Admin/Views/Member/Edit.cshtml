@model abcMarket.Models.Users

@{
    ViewBag.Title = "會員資料" + ((Model.rowid > 0) ? "修改" : "新增");
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@{
    using (Html.BeginForm("Edit", "Member", new { area = "Admin" }, FormMethod.Post, new { id = "popupForm" }))
    {
        @Html.AntiForgeryToken()
        if (Model != null && Model.rowid > 0)
        {
            @Html.HiddenFor(model => model.rowid)
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (UserAccount.UserStatus == 2)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.bool_isvarify, htmlAttributes: new { @class = "control-label control-header" })
                @Html.CheckBoxFor(model => model.bool_isvarify, new { @class = "form-control form-control-checkbox" })
                @Html.ValidationMessageFor(model => model.bool_isvarify)
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.mname, htmlAttributes: new { @class = "control-label control-header" })
            @Html.TextBoxFor(model => model.mname, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.mname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.birthday, htmlAttributes: new { @class = "control-label control-header" })
            @Html.TextBoxFor(model => model.birthday, "{0:yyyy/MM/dd}", new { @class = "form-control datepicker" })
            @Html.ValidationMessageFor(model => model.birthday)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.user_email, htmlAttributes: new { @class = "control-label control-header" })
            @Html.TextBoxFor(model => model.user_email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.user_email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label control-header" })
            @Html.TextBoxFor(model => model.remark, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.remark)
        </div>
        <div>
            <input type="submit" value="存檔" class="btn btn-success form-button" />
        </div>
    }
}
<script src="@Url.Content("~/Scripts/apps/datepicker.js")"></script>
