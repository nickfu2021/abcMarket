@model abcMarket.Models.ProductsProperty


@{
    ViewBag.Title = "商品屬性刪除";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Delete", "ProductProperty", new { area = "Admin" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(model => model.rowid)

    <div class="form-group">
        @Html.LabelFor(model => model.property_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.property_no != null)
        {<span class="control-label control-value">@Model.property_no</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.text_value, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.text_value != null)
        {<span class="control-label control-value">@Model.text_value</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.remark != null)
        {<span class="control-label control-value">@Model.remark</span>}
    </div>

    <div>
        <input type="submit" value="刪除" class="btn btn-danger form-button" />
    </div>
}
