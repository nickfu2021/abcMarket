    </script>

    <script>
        $(document).ready(function () {
            //<![CDATA[
            $(".zoom").each(function () {
                var $this = $(this);
                $this.mlens({
                    imgSrc: $this.attr("data-big"),
                    lensShape: "square", // 放大鏡形狀 circle(圓形), square(方形)
                    lensSize: ["10%", "10%"], // 放大鏡長寬 (可使用 px 或百分比 %)
                    borderSize: 1, // 放大鏡邊框寬度 (px)
                    borderColor: "#fff", // 放大鏡邊框顏色色碼
                    borderRadius: 10, // 如果放大鏡為方形 設定圓角程度
                    overlayAdapt: true,
                    zoomLevel: 1,
                    responsive: true // 圖片是否自適應
                });
            }).parent().css("position", "relative");
            //]]>

            //返回按鈕隱藏

            $(".js-backtop").hide();

            $(window).scroll(function () {
                if ($(window).scrollTop() > 600) {
                    $(".js-backtop").fadeIn(600);
                } else {
                    $(".js-backtop").fadeOut(600);
                }
            });
            //返回頂部按鈕
            var $backtotop = $(".js-backtop");
            $backtotop.click(function () {
                $("html,body").animate({
                    scrollTop: 0
                }, 50);
            })


            //圖片輪播
            $('#scroll').scrollForever({
                delayTime: 20,
            });
        })
    </script>

